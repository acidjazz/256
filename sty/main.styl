
vendor-prefixes ?= webkit moz o ms official

@import '/inc/mixins'
@import guide
@import '/inc/*'

.clear
  clearfix()

body
  padding 0
  margin 0
  font: f.copy1

.soon
  position absolute
  z-index 10
  bottom 5vh
  right 0
  left 0
  text-align center
  color: c.teal2
  font: f.copy2

.section
  > .title
    font: f.h2
    padding 10px

.work
  > .job
    float left
    width 25vw
    height 25vw
    background-size contain
    background-repeat no-repeat
    background-position center center
    for key, project in data.work
      &.job_{key}
        background-color: unquote(project.color)
        background-image url(/img/work/key/logo.jpg)

@media all and (min-width: 1px) and (max-width: 1000px)
  .work
    > .job
      float left
      width 50vw
      height 50vw
   

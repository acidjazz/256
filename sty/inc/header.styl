size = 350
header
  border-bottom 10px solid gc(purple1)
  background-color gc(purple2)
  padding 20px 40px
  //height unit(size, px)
  height 100vh
  position relative
  z-index 5
  transition height 1s linear
  transition-timing-function: cubic-bezier(.87,-.41,.19,1.44)
  &.settled
    height 100px
    overflow hidden
    > .inner > .logo
      left auto
      right 200px
      transition right 0.4s ease-in-out 0.4s
  > .inner
    > .logo
      position absolute
      top 50%
      right 50%
      margin-top - unit(size/2, px)
      margin-right - unit(size/2, px)
      width unit(size, px)
      height unit(size, px)
      onoff()
      > .inner
        width unit(size, px)
        height unit(size, px)
        border-radius 50%
        background-color gc(teal2)
        animation logoCircleIn 0.5s ease-in 0.5s alternate both
        animation-timing-function: cubic-bezier(.87,-.41,.19,1.44)
        position relative
        cursor pointer
        overflow hidden
        &.offing
          animation logoCircleOut 0.5s ease-in 0s alternate both
          animation-timing-function: cubic-bezier(.87,-.41,.19,1.44)
        > .copy
          transition color 0.1s linear
          gf(h1)
          color gc(purple2)
          font-size: unit(size/2.5, px)
          position absolute
          overflow hidden
          top 20px
          top: unit(size/3.5, px)
          right - unit(size/100, px)
          > .letter
            float left
            animation logoTextIn 0.2s ease-in 1.0s alternate both
            &:nth-child(2)
              animation-delay 1.025s
            &:nth-child(3)
              animation-delay 1.05s
    > .info
      margin 10px 20px 0 0
      float right
      text-align right
      color gc(teal2)
      > .text
        padding 5px 0

@keyframes logoCircleIn
  from
    margin unit(size/2, px)
    width 0px
    height 0px
  to
    margin 0
    width unit(size, px)
    height unit(size, px)

@keyframes logoCircleOut
  from
    margin 0
    width unit(size, px)
    height unit(size, px)
  to
    margin unit(size/2, px)
    width 0px
    height 0px



@keyframes logoTextIn
  from
    opacity 0
    transform translate(20px, 0)
  to
    opacity 1
    transform translate(0, 0)

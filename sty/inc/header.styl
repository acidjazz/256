size = 350
header
  border-bottom 10px solid gc(purple1)
  background-color gc(purple2)
  height 100vh
  position relative
  z-index 5
  transition height 1s linear
  transition-timing-function: cubic-bezier(.87,-.41,.19,1.44)
  overflow hidden
  &.settled
    height 160px
    > .inner > .logo
      left auto
      right 200px
      transition right 0.4s ease-in-out 0.4s
  > .inner
    > .menu
      width 600px
      height 50px
      margin 75px 0 0 0
      > .option
        float left
        position relative
        width 200px
        height 50px
        transform-style preserve-3d
        transition-timing-function: cubic-bezier(.87,-.41,.19,1.44)
        cursor pointer
        transform-origin 100% 115%

        &.on
          transform rotateX(-180deg)
          transition transform 1s cubic-bezier(.87,-.41,.19,1.44) 0.3s
        &.off
          transform rotateX(0deg)
          transition transform 1s cubic-bezier(.87,-.41,.19,1.44) 0s

        &.loading
          animation menuEnter 0.5s ease-in-out 3.0s alternate both
          animation-timing-function cubic-bezier(.87,-.41,.19,1.44)
        &.loading:nth-child(1)
          animation-delay 3.1s
        &.loading:nth-child(2)
          animation-delay 3.3s
        &.loading:nth-child(3)
          animation-delay 3.5s

        > .face
          position absolute
          width inherit
          height inherit
          gf(copy2)
          background-color gc(purple2)
          color gc(teal2)
          backface-visibility hidden
          text-align center
        > .face.front
          transform rotateX(0deg) translate3d(0, 0, 25px)
        > .face.bottom
          transform rotateX(-90deg) translate3d(0, 0, 25px)
          background-color gc(purple2)
        > .face.top
          transform rotateX(90deg) translate3d(0, 0, 25px)
        > .face.back
          transform rotateX(-180deg) translate3d(0, 0, 25px)
          color gc(purple2)
          background-color gc(teal2)
        &.loading.option > .face.back
          background-color gc(purple2) !important

    > .logo
      position absolute
      top 50%
      right 50%
      margin-top - unit(size/2, px)
      margin-right - unit(size/2, px)
      width unit(size, px)
      height unit(size, px)
      onoff()
      > .inner
        width unit(size, px)
        height unit(size, px)
        border-radius 50%
        background-color gc(teal2)
        animation logoCircleIn 0.5s ease-in 0.5s alternate both
        animation-timing-function: cubic-bezier(.87,-.41,.19,1.44)
        position relative
        cursor pointer
        overflow hidden
        &.offing
          animation logoCircleOut 0.5s ease-in 0s alternate both
          animation-timing-function: cubic-bezier(.87,-.41,.19,1.44)
        > .copy
          transition color 0.1s linear
          gf(h1)
          color gc(purple2)
          font-size: unit(size/2.5, px)
          position absolute
          overflow hidden
          top 20px
          top: unit(size/3.5, px)
          right - unit(size/100, px)
          > .letter
            float left
            animation logoTextIn 0.2s ease-in 1.0s alternate both
            &:nth-child(2)
              animation-delay 1.025s
            &:nth-child(3)
              animation-delay 1.05s
    > .info
      margin 10px 20px 0 0
      float right
      text-align right
      color gc(teal2)
      > .text
        padding 5px 0

@keyframes logoCircleIn
  from
    margin unit(size/2, px)
    width 0px
    height 0px
  to
    margin 0
    width unit(size, px)
    height unit(size, px)

@keyframes logoCircleOut
  from
    margin 0
    width unit(size, px)
    height unit(size, px)
  to
    margin unit(size/2, px)
    width 0px
    height 0px


@keyframes menuEnter
  from
    transform rotateX(90deg)
  to
    transform rotateX(0deg)


@keyframes logoTextIn
  from
    opacity 0
    transform translate(20px, 0)
  to
    opacity 1
    transform translate(0, 0)

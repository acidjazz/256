
@media all and (min-width: 1px) and (max-width: 1000px)
  .work
    text-align center
    > .job
      width 45vw
      height 45vw
      margin 2vw 

  .section.section_resume
    > .contact
      margin 10px 10px 0 0
      > a.set
        > .icon
          margin 0 0 0 5px
          padding 10px

        > .value
          display none
    > .name
      gf(copy1)
      margin 20px 0 0 10px
    > .content
      margin 10px 10px
      padding 0px
      > .subsection
        margin 10px
        > .title
          padding 5px
        > .copy
          padding 10px
          gf(copy1s)
          ul
            margin 5px
            padding 0 0 0 20px
  .modal
    width 100%
    height 100%
    margin  0
    left 0
    top 0
    > .inner
      top 0
      transform translateY(0)
      height 100%
      > .body
        padding 30px 20px
        > .copy
          padding 0 0 10px 0
          &.copy_title
            margin 0 60px 0 0
          &.copy_tagline
            margin 15px 0 0 0
      > .close
        top 20px
        right 20px


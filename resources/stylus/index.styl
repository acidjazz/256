.section
  onoff()
  height 100vh

.work
  padding 1vw 
  > .job
    float left
    width 22.5vw
    height 22.5vw
    position relative
    margin 1vw
    overflow hidden
    animation cellInY 0.2s linear 0.3s both
    cursor pointer
    for i in 1..8
      &:nth-child({i})
        animation-delay unit((0.1*i) + 0.3, 's')
    for key, project in config.work
      &.job_{key}
        > .inner
          //background-color: unquote(project.color)
          position relative
          width inherit
          height inherit
          overflow hidden
          &:hover > .title
            opacity 1
            transform translate(0, 0)
            > .copy
              transform translate(0, 0)
              opacity 1
          > .background, > .logo
            position absolute
            fullsize()
          > .background
            background-image url(/images/work/key/background.jpg)
            background-size cover
            background-position 50% 50%
            background-repeat no-repeat
            width 150%
            height 150%
            margin -25% 0 0 -25%
          > .logo
            background-image url(/images/work/key/logo.png)
            background-size contain
            background-position 50% 50%
            background-repeat no-repeat
            width inherit
            height inherit
          > .title
            position absolute
            bottom 0
            left 0
            color gc(white1)
            background-color rgba(gc(black1), 0.7)
            width 100%
            text-align center
            padding 10px 0
            gf(copy1)
            opacity 0
            transform translate(0, 30px)
            transition transform 0.1s linear 0s, opacity 0.1s linear 0s
            > .copy
              transform translate(0, 10px)
              transition transform 0.1s linear 0.05s, opacity 0.1s linear 0.05s
              opacity 0


@media all and (min-width: 1px) and (max-width: 1000px)
  .work
    text-align center
    > .job
      width 45vw
      height 45vw
      margin 2vw 

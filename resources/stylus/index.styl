.fade
  onoff()
  position fixed
  fullsize()
  background-color rgba(gc(black1), 0.9)
  z-index 10

.modal
  onoff()
  position fixed
  width 800px
  margin-left -400px
  left 50%
  top 50%
  transform translateY(-50%)
  z-index 10
  animation cellInY 0.5s linear 0s both
  animation-timing-function: cubic-bezier(.87,-.41,.19,1.44)
  > .inner
    position relative
    top 50%
    transform translateY(-50%)
    background-color gc(black2)
    //border-radius 20px
    > .body
      padding 60px
      > .links
        > .link
          onoff()
          animation cellOutY 0.2s linear 0.8s both
          for i in 1..3
            &:nth-child({i})
              animation-delay unit((0.1*i) + 0.8, 's')
          float left
          width 35px
          height 35px
          background-color gc(purple1)
          padding 15px
          margin 0 15px 0 0
          border-radius 50%
          cursor pointer
          &:hover > svg > path
              fill gc(white1)
          > svg
            width inherit
            height inherit
            > path
              fill gc(purple3)
              transition fill 0.1s linear 0s
      > .copy
        padding 0 0 20px 0
        animation cellOutY 0.2s linear 0.5s both
        for i in 1..3
          &:nth-child({i})
            animation-delay unit((0.1*i) + 0.5, 's')

        > p > a
          color gc(teal1)
          text-decoration none
          &:hover
            color gc(purple2)
            background-color gc(teal2)

        &.copy_title
          gf(copy3)
          color gc(teal1)
          float left
          letter-spacing 2px
        &.copy_tagline
          color gc(teal2)
          gf(copy1)
          float left
          margin 8px 0 0 10px
        &.copy_detail
          clear both
          color gc(white1)
          gf(copy1)
          //padding-right 30px

    > .close
      animation spinIn 0.5s linear 0.5s both
      animation-timing-function: cubic-bezier(.87,-.41,.19,1.44)
      position absolute
      top 30px
      right 30px
      width 35px
      height 35px
      cursor pointer
      background-color gc(purple1)
      border-radius 50%
      padding 15px
      > .blades
        transform rotate(45deg)
        transition transform 0.5s ease-in-out 0.2s
        > .blade
          transition background-color 0.2s ease-in-out 0.2s
        height 35px
        &:hover
          transform rotate(135deg)
          transition transform 0.2s ease-in-out 0s
          > .blade
            background-color gc(white1)
            transition background-color 0.2s ease-in-out 0s
        > .blade
          height 8px
          background-color gc(purple3)
          border-radius 0 4px 0 4px
          &:nth-child(1)
            transform translate(0px, 13.5px) rotate(90deg)
          &:nth-child(2)
            transform translate(0px, 5.5px) rotate(0deg)

.section
  onoff()
  height calc(100vh - 170px)
  > .uc
    gf(h1)
    text-align center
    color gc(teal2)
    width 300px
    height 60px
    position absolute
    top 50%
    left 50%
    margin-left -150px
    margin-top -30px

    animation cellInY 0.5s linear 0s both
    animation-timing-function: cubic-bezier(.87,-.41,.19,1.44)
  &.section_contact
    > .copy
      gf(h2)
      margin 40px
      padding 40px
      background-color gc(black2)
      animation cellInY 0.5s linear 0s both
      animation-timing-function: cubic-bezier(.87,-.41,.19,1.44)
      > .set
        width 420px
        margin 0 auto 20px auto
        &:last-child
          margin auto
        &:hover
          > .icon > svg > path
            fill gc(white1)
            transition fill 0.1s linear 0s
          > .value
            color gc(white1)
        display block
        > .icon
          float left
          width 35px
          height 35px
          padding 15px
          background-color gc(purple1)
          border-radius 50%
          margin 0 15px 0 0
          > svg
            width inherit
            height inherit
            > path
              fill gc(purple3)
        > .value
          float left
          line-height 55px
          color gc(teal2)
          transition color 0.1s linear 0s

.work
  padding 1vw 
  > .job
    float left
    width 22.5vw
    height 22.5vw
    position relative
    margin 1vw
    overflow hidden
    animation cellInY 0.5s linear 0s both
    animation-timing-function: cubic-bezier(.87,-.41,.19,1.44)
    cursor pointer
    for i in 1..10
      &:nth-child({i})
        animation-delay unit((0.1*i), 's')
    for key, project in config.work
      &.job_{key}
        &:nth-child(odd) > .inner:hover > .title
          opacity 1
          transform translate(0, 10px) rotate(2deg)
          > .copy
            transform translate(0, 0) rotate(-2deg)
            opacity 1
        &:nth-child(even) > .inner:hover > .title
          opacity 1
          transform translate(0, 10px) rotate(-2deg)
          > .copy
            transform translate(0, 0) rotate(2deg)
            opacity 1
        > .inner
          position relative
          width inherit
          height inherit
          overflow hidden
          > .background, > .logo
            position absolute
            fullsize()
          > .background
            background-image url(/images/work/key/background.jpg)
            background-size cover
            background-position 50% 50%
            background-repeat no-repeat
            width 150%
            height 150%
            margin -25% 0 0 -25%
          > .logo
            background-image url(/images/work/key/logo.png)
            background-size contain
            background-position 50% 50%
            background-repeat no-repeat
            width inherit
            height inherit
          > .title
            position absolute
            bottom 0
            left 0
            color gc(white1)
            //background-color rgba(gc(black1), 0.7)
            c = convert(project.color)
            background-color rgba(c, 0.7)
            width 110%
            margin-left -5%
            text-align center
            padding 15px 0 20px 0
            gf(copy1)
            opacity 0
            transform translate(0, 30px) rotate(7deg)
            transition transform 0.1s linear 0s, opacity 0.1s linear 0s
            > .copy
              transform translate(0, 10px)
              transition transform 0.1s linear 0.05s, opacity 0.1s linear 0.05s
              opacity 0
